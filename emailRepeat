def validEmail(emailIn):
    if (emailIn.count("@")) == 1 and (emailIn.count(".")) >= 1 and (len(emailIn) >= 8):
        return True
    else:
        return False

while True:
    emailIn = str(input("Enter your email: "))
    if validEmail(emailIn):
        print("This is a valid email!!!")
        break
    else:
        print("This is not a valid email!!!")
