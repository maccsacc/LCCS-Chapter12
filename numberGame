# Question 16(a)
# Examination Number:
from random import randint

def guess_game(max_guesses_allowed):
    diff = input("Enter difficulty E(asy) or H(ard): ")
    if diff == ("E"):
        secret_number = randint(1, 5)
    elif diff == ("H"):
        secret_number = randint(1, 100)
    guess_count = 0
    user_guess = 0
    funber = []
    max_guesses_allowed = int(input("Enter the maximum number of guesses allowed: "))

    while (user_guess != secret_number) and (guess_count <= max_guesses_allowed-1):

        user_guess = int(input("Enter your guess: "))
        if user_guess in funber:
            print("You already guessed this number.")
        funber.append(user_guess)
        guess_count += 1   # Increase guess_count by 1
        if user_guess == secret_number:
            print("Congratulations! You win!", "\n You took", guess_count, "guesses!")
        elif user_guess < secret_number:
            print("Sorry! Your guess was too low!")
        elif user_guess > secret_number:
            print("Sorry! Your guess was too high!")

print("Welcome to the guessing game!")
guess_game(3)
